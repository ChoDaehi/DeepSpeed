{
  "train_batch_size": 8,
  "gradient_accumulation_steps": 1,
  "fp16": {
    "enabled": true
  },
  "zero_optimization": {
    "stage": 3,
    "offload_optimizer": {
      "device": "cpu",
      "pin_memory": true
    }
    // パラメータ／勾配の NVMe オフロード
//    "offload_param": {
//      "device": "cpu",
//      "nvme_path": "/mnt/f",      // マウントした NVMe パス
//      "buffer_count": 5,
//      "buffer_size": 1e8,
//      "pin_memory": true
//    }
  },
    "optimizer": {
      "type": "Adam",
      "params": {
        "lr": 0.001,
        "betas": [
          0.8,
          0.999
        ],
        "eps": 1e-8,
        "weight_decay": 3e-7
      }
    },
  "allgather_partitions": true,
  "reduce_scatter": true,
  "allgather_bucket_size": 2e8,
  "reduce_bucket_size": 2e8
}
